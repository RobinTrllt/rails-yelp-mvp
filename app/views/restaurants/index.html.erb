<div class="container">
  <h1>Restaurants List:</h1>

  <% @restaurants.each do |restaurant| %>
    <div class="restaurant-display">
      <p class = "restaurant-name">
        <%= link_to(restaurant.name, restaurant_path(restaurant)) %>
      </p>
      <p class = "restaurant-infos">
        <%= restaurant.address %>
        <%= restaurant.category %>
      <p class = "restaurant-infos">
    </div>
  <% end %>

  <p class="buttons" id= "newrestaurant"><%= link_to("+ Add a new restaurant", new_restaurant_path) %></p>
</div>
